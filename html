    /* Navbar fixa */
    nav {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      background: rgba(0,0,0,0.6);
      padding: 15px 30px;
      display: flex;
      justify-content: flex-end;
      gap: 30px;
      color: #fff;
      font-weight: 700;
      opacity: 0;
      transition: opacity 0.5s;
      z-index: 100;
    }

    nav.show {
      opacity: 1;
    }

    nav a {
      color: #fff;
      text-decoration: none;
      cursor: pointer;
    }

    /* Seção Home */
    .home {
      height: 100vh;
      width: 100%;
      background: url('https://res.cloudinary.com/duwqcl2nt/image/upload/v1757866003/Agrupar_5_1x_1_j4a6wy.png') no-repeat center center/cover;
