    /* Seta animada */
    .scroll-down {
      position: absolute;
      bottom: 30px;
      font-size: 2rem;
      cursor: pointer;
      animation: bounce 2s infinite;
    }

    @keyframes bounce {
      0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
      40% { transform: translateY(-15px); }
      60% { transform: translateY(-7px); }
